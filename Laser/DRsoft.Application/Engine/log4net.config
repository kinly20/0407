    <!-- 日志保留15天-->
    <maxSizeRollBackups value="15" />
    <maximumFileSize value="1MB" />
    <!-- 指定按日期切分日志文件 -->
    <rollingStyle value="Composite"/>
    <!-- 当将日期作为日志文件的名字时，必须将staticLogFileName的值设置为false -->
