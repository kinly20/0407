            <Grid Margin="-8 0 -8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Social Card-->
                <Border Style="{StaticResource socialCard}">
                    <StackPanel>
                        <fa:ImageAwesome Icon="EllipsisH" Style="{StaticResource socialCardIconBar}" />
                        <StackPanel Style="{StaticResource socialCardStack}">
                            <fa:ImageAwesome Icon="Pagelines" Foreground="Red" Style="{StaticResource socialCardIconTitle}" />
                            <TextBlock Text="产品1" Style="{StaticResource socialCardTitle}" />
                        </StackPanel>

                        <TextBlock Name="tb_name1" Text="6.3m" Style="{StaticResource socialCardCounterTitle}" />
                        <TextBlock Name="tb_subname1" Text="product 1 remark" Style="{StaticResource socialCardCounterText}" />
                        <Separator />

                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="长" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock Name="tb_p1" Text="87%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="宽" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock Name="tb_p2" Text="80%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="高" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock Name="tb_p3" Text="62%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--Social Card-->
                <Border Grid.Column="1" Style="{StaticResource socialCard}">
                    <StackPanel>
                        <fa:ImageAwesome Icon="EllipsisH" Style="{StaticResource socialCardIconBar}" />
                        <StackPanel Style="{StaticResource socialCardStack}">
                            <fa:ImageAwesome Icon="Pagelines" Foreground="#512DA8" Style="{StaticResource socialCardIconTitle}" />
                            <TextBlock Text="产品2" Style="{StaticResource socialCardTitle}" />
                        </StackPanel>

                        <TextBlock Name="tb_name2" Text="1.8m" Style="{StaticResource socialCardCounterTitle}" />
                        <TextBlock Name="tb_subname2" Text="product 2 remark" Style="{StaticResource socialCardCounterText}" />
                        <Separator />

                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="长" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock  Name="tb_p4" Text="94%" Foreground="#4CAF50" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="宽" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock  Name="tb_p5" Text="91%" Foreground="#4CAF50" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="高" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock  Name="tb_p6" Text="82%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--Social Card-->
                <Border Grid.Column="2" Style="{StaticResource socialCard}">
                    <StackPanel>
                        <fa:ImageAwesome Icon="EllipsisH" Style="{StaticResource socialCardIconBar}" />
                        <StackPanel Style="{StaticResource socialCardStack}">
                            <fa:ImageAwesome Icon="Pagelines" Foreground="#3F51B5" Style="{StaticResource socialCardIconTitle}" />
                            <TextBlock Text="产品3" Style="{StaticResource socialCardTitle}" />
                        </StackPanel>

                        <TextBlock Name="tb_name3" Text="2.5m" Style="{StaticResource socialCardCounterTitle}" />
                        <TextBlock Name="tb_subname3" Text="product 3 remark" Style="{StaticResource socialCardCounterText}" />
                        <Separator />

                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="长" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock  Name="tb_p7" Text="84%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="宽" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock  Name="tb_p8" Text="81%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="高" Style="{StaticResource socialCardBottomTitle}" />
                                <TextBlock Name="tb_p9"  Text="78%" Style="{StaticResource socialCardBottomText}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
