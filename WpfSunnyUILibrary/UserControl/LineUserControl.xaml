<UserControl x:Class="WpfSunnyUILibrary.UserControl.LineUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSunnyUILibrary.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="700">
    <Grid>

        <TextBlock x:Name="tbtext" Text="标题文字" FontSize="14" Foreground="Blue" Background="Transparent" HorizontalAlignment="Center"></TextBlock>

        <Line x:Name="line1" X1="0" Y1="8" X2="300" Y2="8" Stroke="Blue" StrokeThickness="1"></Line>
        <Line x:Name="line2" X1="400" Y1="8" X2="700" Y2="8" Stroke="Blue" StrokeThickness="1"></Line>
    </Grid>
</UserControl>
